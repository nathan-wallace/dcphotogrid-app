<div class="box">
	<%= link_to (image_tag pin.image(:small)), pin  %>
	<p class="description">
		<b>Location:</b>
		<br>
		<%= pin.description %>
	</p>
	<p>
		<strong>
			Posted by <%= link_to pin.user.name, pin.user %>
		</strong>
	</p>
	<p>	
		<%= link_to content_tag(:i, "", class:"icon-eye-open icon-2x"), pin %>
		<% if current_user == pin.user %>
		  | <%= link_to content_tag(:i, "", class:"icon-edit"), edit_pin_path(pin) %> |
		  <%= link_to content_tag(:i, "", class:"icon-trash"), pin, method: :delete, data: { confirm: 'Are you sure?' } %>
	<% end %> 
	</p>
</div>
